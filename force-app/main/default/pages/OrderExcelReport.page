<apex:page
	id="OrderExcelReport"
	standardController="Order"
	extensions="OrderExcelReportController"
	contentType="application/vnd.ms-excel"
>
	<table border="1" style="border-collapse: collapse;">
		<tr>
			<th>Order Number</th>
			<th>Status</th>
			<th>Order Start Date</th>
			<th>Product Name</th>
			<th>Quantity</th>
			<th>Unit Price</th>
		</tr>

		<apex:repeat var="orderitem" value="{!order.OrderItems}">
			<tr>
				<td>{!order.OrderNumber}</td>
				<td>{!order.Status}</td>
				<td>{!order.EffectiveDate}</td>
				<td>{!orderitem.Product2.Name}</td>
				<td>{!orderitem.Quantity}</td>
				<td>{!orderitem.UnitPrice}</td>
			</tr>
		</apex:repeat>
	</table>
</apex:page>
